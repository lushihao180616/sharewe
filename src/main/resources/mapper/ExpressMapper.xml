<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lushihao.sharewe.dao.ExpressMapper">
    <insert id="createExpress" parameterType="Express"
            useGeneratedKeys="true" keyProperty="id">
		INSERT INTO
			express
			(addressId,buildingId,statusId,reward,sendUserOpenId,deadTime,sendTime)
		VALUES
			(#{addressId},#{buildingId},#{statusId},#{reward},#{sendUserOpenId},#{deadTime},#{sendTime})
	</insert>
    <update id="updateExpress" parameterType="Express">
		UPDATE
		    express
		SET
		    addressid=#{addressId},
		    buildingid=#{buildingId},
		    statusid=#{statusId},
		    reward=#{reward},
		    senduseropenid=#{sendUserOpenId},
		    getuseropenid=null,
		    deadtime=#{deadTime},
		    sendtime=#{sendTime},
		    gettime=null,
		    getusercomplete=null
		WHERE
		    id=#{id}
	</update>
    <select id="getOneExpress" parameterType="int" resultType="Express">
        SELECT
            *
        FROM
            express
        WHERE
            id=#{id}
    </select>
</mapper>